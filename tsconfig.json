{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"removeComments": true,
		"strictNullChecks": true,
		"sourceMap": false,
		"inlineSources": false,
		"outDir": "./compiled",
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}