{
	"compilerOptions": {
		"module": "ES2020",
		"target": "es2021",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"removeComments": true,
		"strictNullChecks": true,
		"sourceMap": false,
		"outDir": "./compiled",
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"config.json"
	]
}